<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YesChefApp.Views.RecipeDetailPage">

    <!-- UI Elements for the Recipe Detail Page -->
    <ScrollView>
        <StackLayout Padding="10">
            <Label Text="{Binding Recipe.Name}" FontSize="Large" />
            <Label Text="Ingredients:" FontSize="Medium" FontAttributes="Bold" />
            <Label Text="{Binding Recipe.Ingredients}" />
            <Label Text="Instructions:" FontSize="Medium" FontAttributes="Bold" Margin="0,20,0,0" />
            <Label Text="{Binding Recipe.Instructions}" />
        </StackLayout>
    </ScrollView>
</ContentPage>
