<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YesChefApp.Views.RecipeListPage">

    <!-- UI Elements for the Recipe List Page -->
    <StackLayout Padding="10">
        <!-- Title Label -->
        <Label Text="Select a Recipe" FontSize="Large" />

        <!-- ListView to display the list of recipes -->
        <ListView x:Name="RecipeListView"
                  ItemsSource="{Binding Recipes}" 
                  SelectedItem="{Binding SelectedRecipe, Mode=TwoWay}"> <!-- Correctly bind to SelectedRecipe property -->
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- Correctly bind to Recipe properties 'Name' and 'Description' -->
                    <TextCell Text="{Binding Name}" Detail="{Binding Description}" /> 
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
