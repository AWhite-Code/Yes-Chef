<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="YesChefApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:YesChefApp"
    Shell.FlyoutBehavior="Disabled"
    Title="YesChefApp">

    <ShellContent Title="Recipe List" ContentTemplate="{DataTemplate local:RecipeListPage}" Route="RecipeListPage" />
    <ShellContent Title="Recipe Detail" ContentTemplate="{DataTemplate local:RecipeDetailPage}" Route="RecipeDetailPage" />

</Shell>
