<?xml version="1.0" encoding="utf-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:YesChefApp.Views"
    x:Class="YesChefApp.AppShell">

    <!-- Define routes for your views -->
    <ShellContent
        Title="Recipe List"
        ContentTemplate="{DataTemplate views:RecipeListPage}"
        Route="RecipeListPage" />

    <ShellContent
        Title="Recipe Details"
        ContentTemplate="{DataTemplate views:RecipeDetailPage}"
        Route="RecipeDetailPage" />
</Shell>
